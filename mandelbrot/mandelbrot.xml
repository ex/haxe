<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- metadata, make sure 'package' is at least 2 segments (ie. com.myproject) -->
	<app file="mandelbrot" title="mandelbrot" main="Mandelbrot" package="com.ex.mandelbrot"
		version="1.0.0" company="exdev" />

	<!-- output -->
	<window width="640" height="480" fps="60" background="0" orientation="landscape" resizable="true" />
	<set name="BUILD_DIR" value="bin" />

	<!-- classpath, haxe libs -->
	<classpath name="src" />
	<haxelib name="openfl" />

	<!-- assets -->
	<icon name="assets/nme.svg" />
	<assets path="assets" include="*" exclude="nme.svg" />

</project>
