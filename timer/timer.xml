<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- metadata, make sure 'package' is at least 2 segments (ie. com.myproject) -->
	<app file="timer" title="timer-openfl" main="Platform" package="com.ex.timer" version="1.0.0" company="" />
		
	<!-- output -->
    <window width="480" height="320" if="desktop" />
    <window width="480" height="320" if="flash" />
	<window fps="60" />
	<window orientation="landscape" />

	<set name="BUILD_DIR" value="bin" />
	
	<!-- classpath, haxe libs -->
	<classpath name="src" />
	<haxelib name="openfl" />
	
	<!-- assets -->
	<icon name="assets/nme.svg" />

	<assets path="assets/fonts" include="*.ttf" />
	<assets path="assets/images" include="*" />

	<assets path="assets/sounds" if="flash">
		<sound path="fx_line.mp3" id="fx_line" />
	</assets>
	
	<assets path="assets/sounds" if="html5">
		<sound path="fx_line.ogg" id="fx_line" />
	</assets>

</project>
